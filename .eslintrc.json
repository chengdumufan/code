{
  "root": true,
  "ignorePatterns": [
    "node_modules/",
    "/packages/eslint-plugin/src/",
    "/packages/eslint-plugin/bld/",
    "/packages/eslint-plugin/test-cases/"
  ],
  "extends": ["plugin:@mufan/javascript"],
  "overrides": [
    {
      "files": "**/*.{js,mjs}",
      "parserOptions": {
        "sourceType": "module"
      }
    },
    {
      "files": "**/*.cjs",
      "parserOptions": {
        "sourceType": "script"
      }
    }
  ]
}
