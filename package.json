{
  "name": "mufan-code-packages",
  "private": true,
  "license": "MIT",
  "author": "Chengdu Mufan Technology Co., Ltd.",
  "scripts": {
    "3": "pnpm install && pnpm dedupe && pnpm install",
    "build": "rimraf packages/eslint-plugin/bld && tsc --build",
    "lint": "eslint --no-error-on-unmatched-pattern . && run-in-every eslint-project --parallel --echo -- eslint --no-error-on-unmatched-pattern .",
    "lint-prettier": "prettier --check .",
    "test": "pnpm lint-prettier && pnpm build && pnpm lint",
    "code": "pnpm --filter @mufan/code",
    "eslint-plugin": "pnpm --filter @mufan/eslint-plugin"
  },
  "devDependencies": {
    "@mufan/code": "workspace:*",
    "@mufan/eslint-plugin": "workspace:*",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "run-in-every": "^0.2.0",
    "typescript": "^5.2.2"
  }
}
